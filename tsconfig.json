{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "test"]
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}